<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- https://medium.com/@geekanamika/android-beginners-views-layouts-657a5bbeebe2
        Verwendung margin für schönene Abstand Elemente -->
    <TextView
        android:id="@+id/personFirstNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/personLastNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/eventNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/eventDateItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>