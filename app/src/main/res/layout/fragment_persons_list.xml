<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Google Developers Codelabs. (n.d.).
    Add XML layout.
    https://codelabs.developers.google.com/codelabs/android-room-with-a-view/#9
    Verwendung RecyclerView und Erstellung in XML -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewPersonEventList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/recyclerview_person_event_item" />

</androidx.constraintlayout.widget.ConstraintLayout>